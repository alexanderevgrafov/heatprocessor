{
    "compilerOptions": {
        "pretty": true,
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "module": "commonjs",
        "target": "es2017",
        "lib":[ "es2017" ],
        "jsx": "react",
        "moduleResolution": "node",
        "sourceMap": true,
        "outDir": "dist",
        "alwaysStrict": true,
        "allowJs": true
    },

    "include": [
        "src/*"
    ],

    "exclude": [
        "node_modules",
        "../node_modules",
    ],

    "compileOnSave": true
}